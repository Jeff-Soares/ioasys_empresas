<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ioasys.empresas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="br.com.ioasys.empresas.EmpresasApplication"
        android:icon="@drawable/ic_ioasys"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ioasys"
        android:supportsRtl="true"
        android:theme="@style/Theme.Empresas">
        <activity
            android:name=".ui.activities.MainActivity"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.LoginActivity" />
        <activity android:name=".ui.activities.CompanyActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>