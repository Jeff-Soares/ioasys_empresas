<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Empresas" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColor">@color/charcoal_grey</item>
        <item name="drawerArrowStyle">@style/Theme.CompanyDrawerToggleStyle</item>
        <item name="alertDialogStyle">@style/Theme.MyAlertDialogStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

    </style>

    <style name="Theme.Empresas.SearchView" parent="@style/Theme.Empresas">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:strokeWidth">5</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Theme.CompanyList" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/statusBarCompany</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
    </style>

    <style name="Theme.CompanyDrawerToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="Theme.MyAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">#721981</item>
        <item name="android:textColorPrimary">@color/charcoal_grey</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowTitleStyle">@style/DialogAlertTitle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogAlertButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogAlertButton</item>
    </style>

    <style name="DialogAlertTitle">
        <item name="android:textColor">@color/rouge</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="DialogAlertButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/medium_pink</item>
    </style>


</resources>